<Page x:Class="ExpensesTracker.SetFinancialAchievementsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Set Financial Achievements">

    <StackPanel Margin="20">
        <TextBlock Text="Set Your Financial Goal" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Text="Goal Name:"/>
        <TextBox x:Name="GoalNameTextBox" Margin="0,0,0,10" />

        <TextBlock Text="Goal Amount:"/>
        <TextBox x:Name="GoalAmountTextBox" Margin="0,0,0,10" TextChanged="GoalAmountTextBox_TextChanged" />

        <TextBlock Text="Currency:"/>
        <ComboBox x:Name="CurrencyComboBox" Margin="0,0,0,10" SelectionChanged="CurrencyComboBox_SelectionChanged">
            <ComboBoxItem Content="Rupiah" />
            <ComboBoxItem Content="Dollar" />
        </ComboBox>

        <TextBlock Text="Budget:"/>
        <TextBlock x:Name="BudgetLabel" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Text="Start Date:"/>
        <DatePicker x:Name="StartDatePicker" Margin="0,0,0,10" />

        <Button Content="Set Goal" Click="SetGoalButton_Click" Background="Green" Foreground="White" Padding="10,5"/>
    </StackPanel>
</Page>
